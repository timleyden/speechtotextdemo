{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "transcriptions": {
            "debug":true,
            "matchCondition": {
                "route": "/api/proxy/speechtotext/{*restOfPath}",
                "methods": [
                    "GET",
                    "POST",
                    "DELETE",
                    "PUT",
                    "OPTIONS"
                ]
            },
            "backendUri": "https://%Region%.api.cognitive.microsoft.com/speechtotext/{restOfPath}",
            "requestOverrides": {
                "backend.request.headers.Ocp-Apim-Subscription-Key": "%SubscriptionKey%"
            }
        }
    }
}